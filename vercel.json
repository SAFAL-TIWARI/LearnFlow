{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap",
      "headers": {
        "Content-Type": "application/xml; charset=utf-8"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    { "source": "/privacy-policy", "destination": "/privacy-policy.html" },
    { "source": "/terms-of-service", "destination": "/terms-of-service.html" }
  ],
  "env": {
    "GEMINI_API_KEY": "AIzaSyCOj3Extd63rPuOIHmhbSZNz2lqJwamAwk",
    "NODE_ENV": "production",
    "PORT": "3000",
    "VITE_GOOGLE_CLIENT_ID": "254202388116-agb34f15l78121lrj2gl9bknbkin874l.apps.googleusercontent.com",
